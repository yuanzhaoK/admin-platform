{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Debug Backend Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait"
      ],
      "program": "server.ts",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "🌐 Debug Proxy Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all",
        "--watch-hmr"
      ],
      "program": "proxy-server.ts",
      "env": {
        "POCKETBASE_URL": "http://localhost:8090",
        "GRAPHQL_PORT": "8082",
        "POCKETBASE_ADMIN_EMAIL": "ahukpyu@outlook.com",
        "POCKETBASE_ADMIN_PASSWORD": "kpyu1512..@"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std"
    },
    {
      "name": "💻 Debug Frontend (Next.js)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "🔍 Attach to Frontend (Next.js)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/frontend",
      "remoteRoot": "${workspaceFolder}/frontend",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "🌟 Debug Frontend Server-Side",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "program": "${workspaceFolder}/frontend/node_modules/.bin/next",
      "args": [
        "dev"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "🔥 Debug Frontend Client-Side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMapPathOverrides": {
        "webpack://_N_E/./*": "${webRoot}/*",
        "webpack:///./*": "${webRoot}/*"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "🚀 Debug Full Stack",
      "configurations": [
        "🚀 Debug Backend Server",
        "🌟 Debug Frontend Server-Side",
        "🔥 Debug Frontend Client-Side (Chrome)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "💻 Debug Frontend Only",
      "configurations": [
        "🌟 Debug Frontend Server-Side",
        "🔥 Debug Frontend Client-Side (Chrome)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "frontend",
        "order": 2
      }
    }
  ],
  "inputs": [
    {
      "id": "helperScript",
      "description": "选择要调试的帮助脚本",
      "type": "pickString",
      "options": [
        "help/import-product-types.ts",
        "help/create-product-types-data.ts",
        "help/import-brands.ts",
        "help/import-categories.ts",
        "download-pocketbase.ts",
        "setup-admin.ts",
        "clean.ts"
      ]
    }
  ]
}