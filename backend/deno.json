{
  "version": "1.0.0",
  "name": "@tanka/admin-platform-backend",
  "description": "Deno backend for admin platform with PocketBase and GraphQL",
  "exports": "./server.ts",
  "tasks": {
    "dev": "deno run --allow-all proxy-server.ts",
    "start": "deno run --allow-all proxy-server.ts",
    "server": "deno run --allow-all server.ts",
    "graphql": "GRAPHQL_PORT=8082 POCKETBASE_URL=http://localhost:8090 deno run --allow-all server.ts",
    "setup": "deno run --allow-all setup.ts",
    "download-pb": "deno run --allow-all download-pocketbase.ts",
    "clean": "deno run --allow-write --allow-read clean.ts",
    "reset": "deno task clean && deno task server",
    "create-admin": "deno run --allow-all create-admin.ts",
    "create-orders": "deno run --allow-all create-order-collections.ts",
    "create-test-data": "deno run --allow-all create-test-data.ts",
    "fix-orders": "deno run --allow-all fix-orders-data.ts"
  },
  "imports": {
    "@std/http": "https://deno.land/std@0.208.0/http/mod.ts",
    "@std/path": "https://deno.land/std@0.208.0/path/mod.ts",
    "@std/fs": "https://deno.land/std@0.208.0/fs/mod.ts",
    "@std/process": "https://deno.land/std@0.208.0/process/mod.ts",
    "@std/async": "https://deno.land/std@0.208.0/async/mod.ts",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "graphql": "https://deno.land/x/graphql_deno@v15.0.0/mod.ts",
    "pocketbase": "npm:pocketbase@^0.19.0"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/", "*.ts", "*.js"],
    "exclude": ["pb_data/", "bin/", "node_modules/"]
  },
  "lint": {
    "include": ["src/", "*.ts", "*.js"],
    "exclude": ["pb_data/", "bin/", "node_modules/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  }
} 